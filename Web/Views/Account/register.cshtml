@model Web.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}


<!DOCTYPE html>
<html class="bg-black">
<head>
    <meta charset="UTF-8">
    <title>@Web.Helper.Common.ApplicationName | @ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="@Url.Content("~/Content/js/plugins/bootstrap-3.3.1/dist/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/js/plugins/font-awesome-4.3.0/css/font-awesome.min.css")" rel="stylesheet" />
    <!-- Theme style -->
    <link href="@Url.Content("~/Content/css/AdminLTE.css")" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script src="@Url.Content("~/Content/js/plugins/jquery.min.js")"></script>
    <!-- Bootstrap -->
    <script src="@Url.Content("~/Content/js/plugins/bootstrap-3.3.1/dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/AdminLTE/app.js")" type="text/javascript"></script>
    <style type="text/css">
        /* Styles for validation helpers-----------------------------------------------------------*/
        .field-validation-error {
            color: #ff0000;
        }

        .field-validation-valid {
            display: none;
        }

        .input-validation-error {
            border: 1px solid #ff0000;
            background-color: #ffeeee;
        }

        .validation-summary-errors {
            font-weight: bold;
            color: #ff0000;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
    <style type="text/css">
        .form-box .header {
            background: #337ab7;
            background-color: #337ab7;
        }
    </style>
</head>
<body class="bg-black">

    <div class="form-box" id="login-box">
        <div class="header bg-primary">Register New Membership</div>
        <form action="@Url.Action("register","account")" method="post">
            <div class="body bg-gray">
                <div class="form-group">
                    @Html.TextBoxFor(P => P.ScreenName, new { @class = "form-control", placeholder = "Screen name" })
                    @Html.ValidationMessageFor(P => P.ScreenName)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(P => P.UserName, new { @class = "form-control", placeholder = "User name" })
                    @Html.ValidationMessageFor(P => P.UserName)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(P => P.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(P => P.Password)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(P => P.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                    @Html.ValidationMessageFor(P => P.ConfirmPassword)
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-primary btn-block">Sign me up</button>
                <a href="@Url.Action("login","account")" class="text-center">I already have a membership</a>
            </div>
        </form>
    </div>
</body>
</html>
